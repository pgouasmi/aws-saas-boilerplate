# .env.example
# Copiez ce fichier vers .env et remplissez les valeurs appropriées
# Ne partagez jamais votre fichier .env contenant vos informations sensibles

#===========================================================
# CONFIGURATION WORDPRESS
#===========================================================

# Domaine ou adresse IP du site WordPress
# Exemple: example.com, 192.168.1.10, ou laisser vide pour utiliser l'IP publique
WORDPRESS_DOMAIN=""

# Informations de la base de données
WORDPRESS_DB_NAME="wordpress"
WORDPRESS_DB_USER="wordpress"
WORDPRESS_DB_PASSWORD=""  # Laissez vide pour générer un mot de passe aléatoire

# Informations du site
WORDPRESS_SITE_TITLE="Mon Site WordPress"
WORDPRESS_ADMIN_USER="admin"
WORDPRESS_ADMIN_PASSWORD=""  # Laissez vide pour utiliser le même mot de passe que la base de données
WORDPRESS_ADMIN_EMAIL="admin@example.com"

# Chemin d'installation (ne pas modifier sauf si nécessaire)
WORDPRESS_INSTALL_PATH="/var/www/html"

#===========================================================
# CONFIGURATION AWS / TERRAFORM
#===========================================================

# Identifiants AWS (obligatoire)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_SESSION_TOKEN=""  # Optionnel, seulement si vous utilisez des identifiants temporaires

# Région AWS et Zone de disponibilité
AWS_REGION="us-east-1"
AWS_AVAILABILITY_ZONE="us-east-1a"

# Configuration EC2
EC2_INSTANCE_TYPE="t2.micro"
EC2_KEY_PAIR_NAME=""  # Nom de votre paire de clés SSH existante
EC2_AMI_ID=""  # Laissez vide pour utiliser l'AMI Amazon Linux 2023 la plus récente

# Configuration réseau
VPC_ID=""  # Laissez vide pour créer un nouveau VPC
SUBNET_ID=""  # Laissez vide pour créer un nouveau sous-réseau
CIDR_BLOCK="10.0.0.0/16"  # Pour un nouveau VPC
SUBNET_CIDR_BLOCK="10.0.1.0/24"  # Pour un nouveau sous-réseau

# Groupes de sécurité
ALLOWED_SSH_CIDR="0.0.0.0/0"  # Adresses IP autorisées pour SSH (par défaut: partout)
ALLOWED_HTTP_CIDR="0.0.0.0/0"  # Adresses IP autorisées pour HTTP (par défaut: partout)

# Tags des ressources
PROJECT_NAME="wordpress-site"
ENVIRONMENT="dev"  # dev, staging, prod, etc.

#===========================================================
# CONFIGURATION AVANCÉE
#===========================================================

# Optionnel: Configuration S3 pour les médias WordPress
ENABLE_S3_MEDIA="false"  # true ou false
S3_BUCKET_NAME=""
S3_REGION=""  # Par défaut: même que AWS_REGION

# Optionnel: Configuration CloudFront
ENABLE_CLOUDFRONT="false"  # true ou false
CLOUDFRONT_PRICE_CLASS="PriceClass_100"  # PriceClass_100, PriceClass_200, ou PriceClass_All

# Optionnel: Base de données RDS au lieu de MariaDB locale
USE_RDS="false"  # true ou false
RDS_INSTANCE_CLASS="db.t3.micro"
RDS_STORAGE_SIZE="20"  # En GB
RDS_MULTI_AZ="false"  # true ou false pour la haute disponibilité

# Optionnel: Configuration pour les sauvegardes
ENABLE_BACKUPS="false"  # true ou false
BACKUP_RETENTION_DAYS="7"
BACKUP_S3_BUCKET=""

# Optionnel: Configuration pour la mise à l'échelle automatique
ENABLE_AUTO_SCALING="false"  # true ou false
MIN_INSTANCES="1"
MAX_INSTANCES="3"
SCALE_UP_CPU_THRESHOLD="80"  # Pourcentage
SCALE_DOWN_CPU_THRESHOLD="30"  # Pourcentage